{
	"name": "base",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@cloudflare/workers-types": "^4.20251213.0",
			"@orpc/server": "^1.12.2",
			"@orpc/openapi": "^1.12.2",
			"@orpc/zod": "^1.12.2",
			"better-auth": "^1.4.9",
			"alchemy": "^0.82.1",
			"@orpc/tanstack-query": "^1.12.2",
			"@orpc/client": "^1.12.2",
			"@tanstack/react-query": "^5.90.12",
			"@better-auth/expo": "^1.4.9"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @stronk/db db:push",
		"db:studio": "turbo -F @stronk/db db:studio",
		"db:generate": "turbo -F @stronk/db db:generate",
		"db:migrate": "turbo -F @stronk/db db:migrate",
		"check": "biome check --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@stronk/env": "workspace:*",
		"@fontsource-variable/inter": "^5.2.8",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@stronk/config": "workspace:*",
		"@biomejs/biome": "^2.2.0",
		"@cloudflare/workers-types": "catalog:",
		"@types/node": "^22.13.14",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.3"
}
